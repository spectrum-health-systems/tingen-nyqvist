<Window
    x:Class="TingenNyqvist.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TingenNyqvist"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1000"
    Height="800"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Image
            x:Name="imgNyqvistLogo"
            Width="256"
            Height="256"
            Margin="-20,12,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/AppData/Image/Logo/tingen-nyqvist-logo-256x256.png" />
        <Label
            x:Name="lblNyqvistUser"
            Width="75"
            Margin="10,276,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            Background="Black"
            Content="Username"
            FontFamily="Bahnschrift SemiBold"
            FontSize="14"
            Foreground="White">
            <Label.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5,0,0,5" />
                </Style>
            </Label.Resources>
        </Label>
        <TextBox
            x:Name="txbxNyqvistUser"
            Width="120"
            Height="27"
            Margin="85,276,0,0"
            Padding="5,0,5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            BorderBrush="Black"
            CharacterCasing="Upper"
            FontFamily="Bahnschrift"
            FontSize="14"
            Text=""
            TextChanged="txbxNyqvistUser_TextChanged"
            TextWrapping="NoWrap">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="0,5,5,0" />
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label
            x:Name="lblNyqvistPass"
            Width="75"
            Margin="10,308,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            Background="Black"
            Content="Password"
            FontFamily="Bahnschrift SemiBold"
            FontSize="14"
            Foreground="White">
            <Label.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5,0,0,5" />
                </Style>
            </Label.Resources>
        </Label>
        <TextBox
            x:Name="txbxNyqvistPass"
            Width="120"
            Height="27"
            Margin="85,308,0,0"
            Padding="5,0,5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            BorderBrush="Black"
            FontFamily="Bahnschrift"
            FontSize="14"
            Text=""
            TextChanged="txbxNyqvistPass_TextChanged"
            TextWrapping="NoWrap">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="0,5,5,0" />
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox
            x:Name="txbxQuery"
            Width="739"
            Height="250"
            Margin="228,15,0,0"
            Padding="10,40,10,5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            AcceptsReturn="True"
            BorderBrush="Black"
            BorderThickness="2"
            FontFamily="Cascadia Mono"
            FontSize="12"
            IsEnabled="false"
            Text=""
            TextChanged="txbxQuery_TextChanged"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6" />
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label
            x:Name="lblQuery"
            Width="75"
            Margin="228,15,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="center"
            Background="Black"
            BorderBrush="black"
            BorderThickness="0"
            Content="Query"
            FontFamily="Bahnschrift SemiLight"
            FontSize="18"
            Foreground="White">
            <Label.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6,0,6,0" />
                </Style>
            </Label.Resources>
        </Label>

        <Button
            x:Name="btnQueryReset"
            Width="48"
            Height="22"
            Margin="308,21,0,0"
            Padding="0,2,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="LawnGreen"
            Background="DarkGreen"
            BorderBrush="LawnGreen"
            BorderThickness="1"
            Click="btnQueryReset_Click"
            Content="Reset"
            FontFamily="Bahnschrift SemiLight"
            FontSize="12">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </Button.Resources>
        </Button>
        <TextBox
            x:Name="txbxQueryResult"
            Width="739"
            Height="250"
            Margin="228,317,0,0"
            Padding="10,40,10,5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            AcceptsReturn="True"
            BorderBrush="Black"
            BorderThickness="2"
            FontFamily="Cascadia Mono"
            FontSize="12"
            Text=""
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6" />
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label
            x:Name="lblQueryResult"
            Width="122"
            Margin="228,319,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="center"
            Background="Black"
            BorderBrush="black"
            BorderThickness="0"
            Content="Query result"
            FontFamily="Bahnschrift SemiLight"
            FontSize="18"
            Foreground="White">
            <Label.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6,0,6,0" />
                </Style>
            </Label.Resources>
        </Label>
        <Button
            x:Name="btnQueryLive"
            Width="60"
            Height="27"
            Margin="315,277,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="LIVE"
            IsEnabled="False">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Button.Resources>
        </Button>
        <Button
            x:Name="btnQuerySbox"
            Width="60"
            Height="27"
            Margin="455,277,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="SBOX"
            IsEnabled="False">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Button.Resources>
        </Button>
        <Button
            x:Name="btnQueryUat"
            Width="60"
            Height="27"
            Margin="385,277,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="UAT"
            IsEnabled="False">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Button.Resources>
        </Button>
        <Button
            x:Name="btnQueryBld"
            Width="60"
            Height="27"
            Margin="525,277,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="BLD"
            IsEnabled="False">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Button.Resources>
        </Button>
        <Label
            x:Name="lblAvatarSystems"
            Width="76"
            Margin="228,275,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="center"
            Background="Black"
            BorderBrush="black"
            BorderThickness="0"
            Content="System"
            FontFamily="Bahnschrift SemiLight"
            FontSize="18"
            Foreground="White">
            <Label.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6,0,0,6" />
                </Style>
            </Label.Resources>
        </Label>
        <Button
            x:Name="btnFormatXml"
            Width="84"
            Height="22"
            Margin="354,323,0,0"
            Padding="0,2,0,0"
            Foreground="LawnGreen"
            Background="DarkGreen"
            BorderBrush="LawnGreen"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderThickness="1"
            Content="Format XML"
            FontFamily="Bahnschrift SemiLight"
            FontSize="12">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </Button.Resources>
        </Button>
        <TextBox
            x:Name="txbxWebServiceCall"
            Width="739"
            Height="167"
            Margin="228,581,0,0"
            Padding="10,40,10,5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            AcceptsReturn="True"
            BorderBrush="Black"
            BorderThickness="2"
            FontFamily="Cascadia Mono"
            FontSize="12"
            Text=""
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6" />
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label
            x:Name="lblTingenWebServiceCall"
            Width="217"
            Margin="228,583,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="center"
            Background="Black"
            BorderBrush="black"
            BorderThickness="0"
            Content="Tingen Web Service call"
            FontFamily="Bahnschrift SemiLight"
            FontSize="18"
            Foreground="White">
            <Label.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6,0,6,0" />
                </Style>
            </Label.Resources>
        </Label>
        <Button
            x:Name="btnCopyWebServiceCall"
            Width="26"
            Height="26"
            Margin="451,586,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderThickness="0"
            Content="">
            <Button.Background>
                <ImageBrush ImageSource="/AppData/Image/Control/copy-48.png" />
            </Button.Background>
        </Button>


    </Grid>
</Window>