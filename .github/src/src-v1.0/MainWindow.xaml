<Window
    x:Class="TingenNYQVIST.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TingenNYQVIST"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Tingen NYQVIST"
    Width="900"
    Height="800"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Label
            x:Name="lblNyqvistUserName"
            Width="75"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"
            Background="Black"
            Content="Username"
            Foreground="White" />
        <TextBox
            x:Name="txbxNyqvistUserName"
            Width="150"
            Height="26"
            Margin="85,10,0,0"
            Padding="5,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            BorderBrush="Black"
            Text=""
            TextWrapping="Wrap" />
        <Label
            x:Name="lblNyqvistUserPass"
            Width="75"
            Margin="10,41,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"
            Background="Black"
            Content="Password"
            Foreground="White" />

        <PasswordBox
            x:Name="pwbxNyqvistUserPass"
            Width="150"
            Height="26"
            Margin="85,41,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="Black"
            PasswordChanged="pwbxNyqvistUserPass_PasswordChanged" />
        <Label
            x:Name="lblQuery"
            Width="75"
            Margin="10,72,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"
            Background="Black"
            Content="Query"
            Foreground="White" />
        <TextBox
            x:Name="txbxQuery"
            Width="790"
            Height="120"
            Margin="85,72,0,0"
            Padding="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="Black"
            FontSize="16"
            HorizontalScrollBarVisibility="Auto"
            Text=""
            TextChanged="txbxQuery_TextChanged"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
        <Label
            x:Name="lblAvatarSystem"
            Width="75"
            Margin="10,198,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="right"
            VerticalContentAlignment="Center"
            Background="Black"
            Content="System"
            Foreground="White" />
        <Button
            x:Name="btnLiveSystem"
            Width="75"
            Height="26"
            Margin="90,198,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnLiveSystem_Click"
            Content="LIVE"
            IsEnabled="false" />
        <Button
            x:Name="btnUatSystem"
            Width="75"
            Height="26"
            Margin="170,198,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnUatSystem_Click"
            Content="UAT"
            IsEnabled="false" />
        <Button
            x:Name="btnSboxSystem"
            Width="75"
            Height="26"
            Margin="250,198,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnSboxSystem_Click"
            Content="SBOX"
            IsEnabled="false" />
        <Label
            x:Name="lblResult"
            Width="75"
            Margin="10,229,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"
            Background="Black"
            Content="Result"
            Foreground="White" />
        <TextBox
            x:Name="txbxResult"
            Width="790"
            Height="368"
            Margin="85,229,0,0"
            Padding="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="Black"
            FontSize="16"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="true"
            Text=""
            TextChanged="txbxResult_TextChanged"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
        <Button
            x:Name="btnFormatResultXml"
            Width="75"
            Height="26"
            Margin="85,602,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnFormatResultXml_Click"
            Content="Format XML"
            IsEnabled="false" />
        <Button
            x:Name="btnCopyResultXml"
            Width="75"
            Height="26"
            Margin="165,602,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnCopyResultXml_Click"
            Content="Copy XML"
            IsEnabled="false" />
        <Label
            x:Name="lblWebServiceCall"
            Width="75"
            Height="26"
            Margin="10,633,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"
            Background="Black"
            Content="Web service"
            Foreground="White" />
        <TextBox
            x:Name="txbxWebServiceCall"
            Width="790"
            Height="75"
            Margin="85,633,0,0"
            Padding="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="Black"
            FontSize="12"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="true"
            Text=""
            TextChanged="txbxWebServiceCall_TextChanged"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
        <Button
            x:Name="btnCopyWebServiceCall"
            Width="136"
            Height="26"
            Margin="85,713,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnCopyWebServiceCall_Click"
            Content="Copy web service call"
            IsEnabled="false" />

    </Grid>
</Window>
